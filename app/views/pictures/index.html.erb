<h1>Listing pictures</h1>

<table>
  <tr>
   
    <th>File</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%#= picture.title %></td>
    <td><%#= picture.description %></td>
    <td><%= image_tag(picture.file_url(:thumb)) if picture.file.present? %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%#= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= button_to "delete",picture, :method=>:delete, :class=>:destroy %></td>
  </tr>
<% end %>
</table>

